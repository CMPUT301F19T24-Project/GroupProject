<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/gradient_followers"
        android:gravity="center_horizontal|center_vertical"
        android:text="Current User - name 1's history"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/mapHistorySpinner"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:layout_weight="3"
            android:backgroundTint="#FCC42A2A"
            android:backgroundTintMode="src_in" />

        <Button
            android:id="@+id/changeToListViewButton"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_following"
            android:text="View As List"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

</LinearLayout>