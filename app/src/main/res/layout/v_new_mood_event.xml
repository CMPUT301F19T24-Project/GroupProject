    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/pickDateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DADADA"
            android:fontFamily="@font/quicksand"
            android:text="Date" />

        <Button
            android:id="@+id/pickTimeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DADADA"
            android:fontFamily="@font/quicksand"
            android:text="Time" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/e_tv_new_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button
        android:id="@+id/b_add_from_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0.5"
        android:backgroundTint="#B512315E"
        android:fontFamily="@font/quicksand"
        android:text="Add Image From Camera"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/b_add_from_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0.5"
        android:backgroundTint="#B512315E"
        android:fontFamily="@font/quicksand"
        android:text="Add Image From Photos"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:fontFamily="@font/quicksand"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:text="Include location?"
        android:textSize="16dp"
        android:textStyle="bold" />
    
    <Switch
        android:id="@+id/sw_include_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_weight="0.01"
        android:fontFamily="@font/quicksand"
        android:gravity="center_vertical"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp"
        android:thumbTint="@color/colorPrimary"
        android:thumbTintMode="src_atop"
        android:trackTint="#B512315E"
        android:trackTintMode="multiply" />
    
    <Button
        android:id="@+id/b_submit_new_mood_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_weight="0.5"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/quicksand"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/image_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />
    </LinearLayout>

</LinearLayout>